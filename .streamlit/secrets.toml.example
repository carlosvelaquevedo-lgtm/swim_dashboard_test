# Stripe Configuration for Single Analysis Payment
# Copy this file to secrets.toml and add your actual Stripe keys

[stripe]
# Get these from https://dashboard.stripe.com/apikeys
publishable_key = "pk_test_YOUR_PUBLISHABLE_KEY_HERE"
secret_key = "sk_test_YOUR_SECRET_KEY_HERE"

# Create a Product and Price in Stripe Dashboard for single analysis
# Get the Price ID (starts with price_...)
price_id = "price_YOUR_PRICE_ID_HERE"

# Base URL of your app (update with your actual Streamlit app URL)
base_url = "https://yourapp.streamlit.app"

# For production, use:
# publishable_key = "pk_live_..."
# secret_key = "sk_live_..."
# price_id = "price_live_..."
